{
  "manifest_version": 3,
  "name": "Coursera Course Downloader",
  "description": "Download Coursera course videos and reading materials concurrently. Educational purpose only.",
  "version": "3.1",
  "author": "Bhashkar Gupta",
  "homepage_url": "https://techfixerlab.com",
  "permissions": [
    "activeTab",
    "downloads",
    "storage",
    "tabs",
    "scripting",
    "debugger"
  ],
  "host_permissions": [
    "*://*.coursera.org/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.coursera.org/*"
      ],
      "js": [
        "html2pdf.bundle.min.js",
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png"
  }
}